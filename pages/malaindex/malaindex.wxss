/* 模板列表 */

.mubanListView {
    width: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    margin: 34rpx 0 0;
}

.mubanClassTitle {
    width: 100%;
    height: 56rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.mubanIconListView {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    flex-wrap: wrap;
    margin-top: 22rpx;
}

.mubanItem {
    margin-bottom: 20rpx;
    margin-right: 22rpx;
    box-shadow:0px 4rpx 8rpx 0px rgba(0,0,0,0.08);
}

.mubanItem:nth-of-type(3n+0) {
    margin-right: 0rpx;
}

.mubanItem, .mubanItem image {
    width: 220rpx;
    height: 350rpx;
    border-radius: 8rpx;
}

/* 收藏小程序image */

