.bg{
	width: 100%;
	height: 2000rpx;
	background-image: url('https://duanju.58100.com/upload/new/turntableBg.png');
	background-repeat: no-repeat;
	background-size: 100%;
}

.recordingView{
	width: 570rpx;
	height: 60rpx;
	position: absolute;
	top: 416rpx;
	left: 40rpx;
	background-color:rgba(40,40,40,0.5);
	border-radius:30rpx;
	box-sizing: border-box;
	padding: 0 10rpx 0 6rpx;
}

.swiper-item{
	width: 100%;
	height: 60rpx;
	display: flex;
	align-items: center;
}

.swipericon{
	width: 48rpx;
	height: 48rpx;
	margin-right: 6rpx;
}

.swipericon image{
	width: 48rpx;
	height: 48rpx;
	border-radius: 50%;
}

.swiperTxt{
	width: 470rpx;
	line-height: 60rpx;
	color: #fff;
	font-size: 28rpx;
	overflow: hidden;
	white-space: nowrap;
	text-overflow: ellipsis;
}

.winningRecord{
	position: absolute;
	right: 0;
	top: 374rpx;
}

.winningRecord image{
	width: 130rpx;
	height: 130rpx;
}

.dazhuangpan{
	width: 632rpx;
	height: 632rpx;
	margin: 500rpx auto 0;
	display: flex;
	justify-content: center;
	align-items: center;
	position: relative;
}

.zhuanpanditu,.zhuanpanditu image{
	width: 632rpx;
	height: 632rpx;
}

.zhuanpanditu{
	position: absolute;
	top: 0;
	left: 0;
	z-index: 1;
}

.pointer,.pointer image{
	width: 162rpx;
	height: 190rpx;
	z-index: 9999;
	position: relative;
}