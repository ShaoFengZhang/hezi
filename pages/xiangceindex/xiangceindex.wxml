<view class="bg" wx:if="{{!ifshowcropper}}">
    <top-bar id="topBarView" comtype="{{2}}"></top-bar>

    <view class="initPage">
        <view class="uploadView">
            <image src="https://duanju.58100.com/upload/new/upload.png" />
            <view class="uploadTxt">上传照片</view>
        </view>
    </view>

    <view class="handleView">

    </view>


    <view class="classifyView">

        <view class="categoryTxtView">
            <scroll-view scroll-x style="height: 88rpx;width:500rpx;">
                <view class="scroll-view">
                    <view class="classTxtItem {{categoryNowIndex==index?'selectTxt':null}}" wx:for="{{classArr}}" wx:key="*this" data-index="{{index}}" catchtap="txtClassClick">{{item.txt}}</view>
                </view>
            </scroll-view>
            <view class="makeBtnView">
                <image src="https://duanju.58100.com/upload/new/malashengcheng.png" />
                <text>生成</text>
            </view>
        </view>

        <view class="categoryPicView">
            <scroll-view scroll-x style="height: 140rpx;" bindscrolltolower="classPicRight">
                <view class="scroll-view">
                    <view class="changePic" catchtap="">
                        <image src="https://duanju.58100.com/upload/new/changePic.png" />
                    </view>
                    <view class="classPicItem {{index==picNowSelcet?'slectPic':null}}" wx:for="{{categoryPicArr}}" wx:key="*this" data-index="{{index}}" catchtap="classPicClick">
                        <image mode="scaleToFill" src="{{srcDomin}}/newadmin/Uploads/{{item.xiaotu_url}}" />
                    </view>
                </view>
            </scroll-view>


        </view>
    </view>

</view>

<view class="bg" wx:if="{{ifshowcropper}}">
    <top-bar id="topBarView" comtype="{{2}}"></top-bar>
    <image-cropper id="image-cropper" limit_move="{{true}}" disable_rotate="{{true}}" width="{{width}}" height="{{height}}" imgSrc="{{src}}" bindimageload="loadimage" bind:clickcut="clickcut"></image-cropper>
</view>